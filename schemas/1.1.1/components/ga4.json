{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tracking-docs-demo.buchert.digital/schemas/components/ga4.json",
  "$defs": {
    "eventName": {
      "allOf": [
        {
          "type": "string",
          "maxLength": 40
        }
      ]
    },
    "mapStructure": {
      "type": "object",
      "maxProperties": 25
    },
    "valueLimits": {
      "additionalProperties": {
        "allOf": [
          {
            "type": "string",
            "maxLength": 100
          }
        ]
      }
    },
    "ga4Properties": {
      "allOf": [
        {
          "if": {
            "properties": {
              "page_title": {
                "type": "string"
              }
            }
          },
          "then": {
            "properties": {
              "page_title": {
                "maxLength": 300
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "page_referrer": {
                "type": "string"
              }
            }
          },
          "then": {
            "properties": {
              "page_referrer": {
                "maxLength": 420
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "page_location": {
                "type": "string"
              }
            }
          },
          "then": {
            "properties": {
              "page_location": {
                "maxLength": 1000
              }
            }
          }
        }
      ]
    }
  }
}
